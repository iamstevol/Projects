#Program that generates a password containing capital & small letters, numbers and special characters.
import random #TO SHUFFLE
import string #STRING FUNCTION

capital_letters = string.ascii_uppercase
small_letters = string.ascii_lowercase
numbers = string.digits
special_character = string.punctuation

combined_characters = (capital_letters + small_letters + numbers + special_character)
length = 15

temp = random.sample(combined_characters, length)
password = "".join(temp)
print ("Hi, your generated password is: " + password)
